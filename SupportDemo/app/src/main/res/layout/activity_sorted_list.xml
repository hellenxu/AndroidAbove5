<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/etSortedList" android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:singleLine="true"
        />

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="end" android:layout_marginRight="30dp"
        android:textSize="22dp" android:textAllCaps="false" android:text="Add"
        android:onClick="onAddNewTask"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvSortedList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>