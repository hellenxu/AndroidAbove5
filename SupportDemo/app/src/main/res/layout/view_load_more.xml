<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="40dp"
    >
    <View android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <ProgressBar android:id="@+id/pbMore" android:layout_width="20dp" android:layout_height="20dp" android:layout_gravity="center_vertical"/>
    <TextView  android:id="@+id/tvMore" android:layout_width="wrap_content" android:layout_height="40dp"
        android:textSize="22dp" android:text="Loading ..." android:gravity="center"
        />
    <View android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1"/>
</LinearLayout>